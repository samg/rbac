%h1.header_with_actions Users
%div
  = will_paginate @users
  %table
    %thead
      %tr
        %th= sort_link "Name", :last_name
        %th= sort_link "Email"
        %th Roles
    %tbody
      - @users.each do |user|
        %tr{:class => cycle('odd', 'even')}
          %td= link_to h(user.name), admin_user_path(user)
          %td= link_to h(user.email), admin_user_path(user)
          %td= h(user.roles.map(&:identifier).to_sentence)
  = will_paginate @users
